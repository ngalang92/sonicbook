<!DOCTYPE html>
<html lang="en">
  <head>
     <% include ./partials/head.ejs %>
  </head>
  <body>

      <!-- Navigation -->
     <% include ./partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h1 class="display-3">Welcome to SonicBook</h1>
          <p class="lead">An application for users to share music.</p>
          <a href="/users/sign_up" class="btn btn-primary btn-lg">Sign up</a>
        </header>

        <!-- Page Features -->
        <section class="row text-center">

          <section class="col-lg-4">
            <img src="../images/music.jpg" alt="music" height="50" width="50"></img>
            <h4 class="card-title">Upload</h4>
            <p class="card-text">Share your music with other artists.</p>
          </section>

          <section class="col-lg-4">
            <img src="../images/comment.jpg" alt="comment" height="50" width="50"></img>
            <h4 class="card-title">Comment</h4>
            <p class="card-text">Talk about the music you love.</p>
          </section>

          <section class="col-lg-4">
            <img src="../images/trophy.jpg" alt="trophy" height="50" width="50"></img>
            <h4 class="card-title">Upgrade to Premium</h4>
            <p class="card-text">Enjoy unlimited upload time and private posts!</p>
          </section>

        </section>
        <!-- /.row -->

      </main>
      <!-- /.container -->

      <% include ./partials/baseScripts.ejs %>
    </body>
</html>
